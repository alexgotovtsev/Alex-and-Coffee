generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(cuid())
  name              String
  phone             Float       @unique
  viber             String?
  telegram          String?
  email             String?     @unique
  createdDate       DateTime    @default(now())
  orders            Order[]
}

model Product {
  id                String      @id @default(cuid())
  type              String
  name              String      
  unit_amount       Float
  image             String?
  currency          String
  unit              Float
  description       String?
  not_discounts     Boolean?
  not_bonus_program Boolean?
}

model Order{
  id                String      @id @default(cuid())
  user              User        @relation(fields: [userId], references: [id])
  userId            String 
  amount            Float
  currency          String
  status            String
  paymentIntentId   String?     @unique
  createdDate       DateTime    @default(now())
  products          Order_Product[]
}

model Order_Product {
  id                 String     @id @default(uuid())
  name               String
  description        String?
  unit_amount        Float
  image              String?
  quantity           Float      @default(0)
  orders             Order[]
}

